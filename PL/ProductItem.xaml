<Window x:Class="PL.ProductItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
          DataContext="{Binding RelativeSource={RelativeSource self}}"
        Title="ProducItemtWindow" Height="450" Width="800" Background="Black">
    <Grid>
        <Label  Foreground="#FFEFCF81" FontSize="16" FontFamily="Segoe Print"  Background="Black" Name="ID" Content="Id:" HorizontalAlignment="Left" Height="42" Margin="209,78,0,0" VerticalAlignment="Top" Width="48"/>
        <TextBox Foreground="Black" Text="{Binding PB.ID}" IsReadOnly="true" Name="Id" HorizontalAlignment="Left" Height="29" Margin="300,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123"/>
        <Label Foreground="#FFEFCF81"  FontSize="16" FontFamily="Segoe Print"  Background="Black" Content="Category:" HorizontalAlignment="Left" Height="39" Margin="209,125,0,0" VerticalAlignment="Top" Width="91"/>
        <TextBox Foreground="Black" FontFamily="Segoe Print" Name="CategoryForNewProduct" Text="{Binding PB.Category,Mode=TwoWay}" HorizontalAlignment="Left" Height="29" Margin="300,125,0,0" VerticalAlignment="Top" Width="123" RenderTransformOrigin="0.49,1.368"/>
        <Label Foreground="#FFEFCF81" FontSize="16" FontFamily="Segoe Print"  Background="Black" Content="Name:" HorizontalAlignment="Left" Height="39" Margin="209,173,0,0" VerticalAlignment="Top" Width="76"/>
        <Label Foreground="#FFEFCF81" FontSize="16" FontFamily="Segoe Print"  Background="Black" Content="Price:" HorizontalAlignment="Left" Height="40" Margin="209,222,0,0" VerticalAlignment="Top" Width="76"/>
        <Label Foreground="#FFEFCF81" FontSize="16" FontFamily="Segoe Print"  Background="Black" Content="InStock:" HorizontalAlignment="Left" Height="39" Margin="209,267,0,0" VerticalAlignment="Top" Width="86"/>
        <TextBox Foreground="Black" Text="{Binding PB.Name}" x:Name="Name" HorizontalAlignment="Left" Height="34" Margin="300,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123" RenderTransformOrigin="0.473,0.77" />
        <TextBox Foreground="Black"  Text="{Binding PB.Price, Mode=TwoWay}" x:Name="Price" HorizontalAlignment="Left" Height="29" Margin="300,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123"/>
        <TextBox Foreground="Black"  x:Name="InStock" Text="{Binding PB.isStock}"  HorizontalAlignment="Left" Height="39" Margin="300,267,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123" />
        <Button  Name="BtnAddOrUpdetProduct"  Content="" HorizontalAlignment="Left" Height="67" Margin="470,313,0,0" VerticalAlignment="Top" Width="140" Click="Button_Click" Foreground="#FFEFCF81" FontSize="16" FontFamily="Segoe Print" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.674"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/צילום מסך 2023-01-13 103152.png"/>
            </Button.Background>
        </Button>
        <Button Content="" Foreground="#FFEFCF81" FontSize="16" FontFamily="Segoe Print"  HorizontalAlignment="Left" Margin="673,10,0,0" VerticalAlignment="Top" Height="97" Width="94" Click="Button_Click_1" RenderTransformOrigin="0.264,-3.297" >
            <Button.Background>
                <ImageBrush ImageSource="/צילום מסך 2023-01-13 103224.png"/>
            </Button.Background>
        </Button>
        <Label Foreground="#FFEFCF81" FontSize="16" FontFamily="Segoe Print"  Background="Black" Content="Amount:" HorizontalAlignment="Left" Margin="206,313,0,0" VerticalAlignment="Top" Height="35" Width="82"/>
        <TextBox HorizontalAlignment="Left" Text="{Binding PB.Amount ,Mode=TwoWay}" Margin="299,319,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="124" Height="29"/>
        <Label Content="View Cart" Foreground="#FFEFCF81" FontSize="16" FontFamily="Segoe Print" HorizontalAlignment="Left" Margin="674,78,0,0" VerticalAlignment="Top"/>
        <Grid HorizontalAlignment="Left" Height="47" Margin="0,377,0,0" VerticalAlignment="Top" Width="87">
            <Grid.Background>
                <ImageBrush ImageSource="/צילום מסך 2023-01-05 161035.png"/>
            </Grid.Background>
        </Grid>

    </Grid>
</Window>
