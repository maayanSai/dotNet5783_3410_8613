<Window x:Class="PL.ProductItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource self}}"
        Title="ProducItemtWindow" Height="450" Width="800" Background="Black">
    <Window.Resources>        <Style TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Segoe Print" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="#FFEFCF81" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Height" Value="42" />
            <Setter Property="Width" Value="91" />
        </Style>        <Style TargetType="TextBox">
            <Setter Property="Background" Value="Black" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Height" Value="29" />
            <Setter Property="Width" Value="123" />            <Setter Property="IsReadOnly" Value="True" />        </Style>    </Window.Resources>
    <Grid>
        <Label Name="ID" Content="Id:"  Margin="209,78,0,0"/>
        <Label Content="Name:" Margin="209,173,0,0"/>
        <Label Content="Price:" Margin="209,222,0,0"/>
        <Label Content="InStock:" Margin="209,267,0,0"/>
        <Label Content="Category:"  Margin="209,125,0,0"/>
        <Label Content="Amount:" Margin="206,313,0,0"/>
        <Label Content="View Cart" Margin="691,92,0,0"/>

        <TextBox Text="{Binding PB.ID}" Name="Id" Margin="300,78,0,0"/>
        <TextBox Text="{Binding PB.Category,Mode=TwoWay}" Name="CategoryForNewProduct" Margin="300,125,0,0"/>
        <TextBox Text="{Binding PB.Name}" x:Name="Name" Margin="300,173,0,0" TextWrapping="Wrap"/>
        <TextBox Text="{Binding PB.Price, Mode=TwoWay}" x:Name="Price" Margin="300,222,0,0" />
        <TextBox Text="{Binding PB.isStock}" x:Name="InStock" Margin="300,267,0,0" />
        <TextBox Text="{Binding PB.Amount ,Mode=TwoWay}" Margin="299,319,0,0"/>

        <Button Name="BtnAddOrUpdetProduct" Content="" HorizontalAlignment="Left" Height="87" Margin="480,293,0,0" VerticalAlignment="Top" Width="67" Click="Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.674"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/צילום מסך 2023-01-13 105941.png"/>
            </Button.Background>
        </Button>
        <Button Margin="690,10,16,0" VerticalAlignment="Top" Height="89" Width="94" Click="Button_Click_1">
            <Button.Background>
                <ImageBrush ImageSource="/צילום מסך 2023-01-13 103224.png"/>
            </Button.Background>
        </Button>
        <Grid HorizontalAlignment="Left" Height="47" Margin="0,359,0,0" VerticalAlignment="Top" Width="87">
            <Grid.Background>
                <ImageBrush ImageSource="/צילום מסך 2023-01-05 161035.png"/>
            </Grid.Background>
        </Grid>
    </Grid>
</Window>
