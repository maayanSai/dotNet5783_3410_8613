<Window x:Class="PL.ProductItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="productItemDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" RowDetailsVisibilityMode="VisibleWhenSelected" Margin="10,10,71,10">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="categoryColumn" Binding="{Binding Category}" Header="Category" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="iDColumn" Binding="{Binding ID}" Header="ID" Width="SizeToHeader"/>
                <DataGridCheckBoxColumn x:Name="isStockColumn" Binding="{Binding isStock}" Header="is Stock" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="nameColumn" Binding="{Binding Name}" Header="Name" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="priceColumn" Binding="{Binding Price}" Header="Price" Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Cart" HorizontalAlignment="Left" Height="42" VerticalAlignment="Top" Width="101" Foreground="#FFEFCF81" FontSize="20" Margin="91,372,0,0" FontFamily="Segoe Print" Background="Black" FontWeight="Bold" Grid.Column="1"/>
        <ComboBox HorizontalAlignment="Left" Height="20" Margin="310,13,0,0" VerticalAlignment="Top" Width="139"/>
        <Label Content="Category" HorizontalAlignment="Left" Height="21" Margin="454,12,0,0" VerticalAlignment="Top" Width="45" Foreground="#FFEFCF81" FontSize="7" FontFamily="Segoe Print" Background="Black" FontWeight="Bold"/>
    </Grid>
</Window>
