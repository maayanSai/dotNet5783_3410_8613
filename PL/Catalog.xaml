<Window x:Class="PL.Catalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{Binding Path=ProducitemtList, RelativeSource={RelativeSource self}}"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="287*"/>
            <ColumnDefinition Width="113*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="Products"  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.CanContentScroll="True"
                  FontFamily="image" Foreground="Black"
                  MouseDoubleClick="productItemDataGrid_MouseDoubleClick" Grid.ColumnSpan="2" Background="White">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <Button Content="Button" Height="65" Width="76"/>
        </ListView>
        <ComboBox HorizontalAlignment="Left" Name="SelectedCategory" Margin="44,0,0,404" Width="155" SelectionChanged="CategorySelectionChanged" SelectedIndex="5" Height="20" VerticalAlignment="Bottom" Grid.Column="1"/>
        <Grid Margin="46,83,463,273">
            <Grid.Background>
                <ImageBrush ImageSource="/צילום מסך 2023-01-15 214016.png"/>
            </Grid.Background>
        </Grid>
        <Grid RenderTransformOrigin="0.63,1.6" Margin="144,84,366,273">
            <Grid.Background>
                <ImageBrush ImageSource="/צילום מסך 2023-01-15 214134.png"/>
            </Grid.Background>
        </Grid>
        <Label Content="12,000" Margin="46,181,454,217"/>
    </Grid>
</Window>
